<script>
  function copyLink(){
    const codeTag = document.querySelector('#script-link');
    navigator.clipboard.writeText(codeTag.innerText).then(function() {
      console.log('Async: Copying to clipboard was successful!');
    }, function(err) {
      if(err) throw (err);
    });
  }
</script>
